<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Variation</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, edit_product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.category_name %></td>
        <td>
          <% product.variations.each do |variation| %>
            <%= variation.name %><br>
          <% end %>
        </td>
        <td>
          <% product.variations.each do |variation| %>
            <%= variation.price_to_s %><br>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

